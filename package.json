{
	"name": "supreme-journey",
	"version": "1.2.0",
	"main": "server.js",
	"description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
	"author": "Robson Cristian de Lira <robson.crlira@hotmail.com>",
	"license": "MIT",
	"keywords": [
		"clean-code",
		"clean-architecture",
		"node",
		"typescript",
		"TDD",
		"DDD"
	],
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "node dist/main/server.js",
		"docker:run": "yarn --only=prod &&  yarn debug",
		"debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
		"dev:docker:up": "yarn build && docker-compose up",
		"dev:docker:down": "docker-compose down",
		"dev": "sucrase-node src/main/server.ts",
		"test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
		"test:verbose": "jest --passWithNoTests --runInBand",
		"test:unit": "yarn test --watch -c jest-unit-config.js",
		"test:integration": "yarn test --watch -c jest-integration-config.js",
		"test:staged": "yarn test --findRelatedTests",
		"test:ci": "yarn test --coverage",
		"postinstall": "husky install",
		"lint": "eslint src/** --fix",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@shelf/jest-mongodb": "^2.2.2",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.5.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/mongodb": "^4.0.7",
		"@types/node": "^17.0.35",
		"@types/supertest": "^2.0.12",
		"@types/validator": "^13.7.2",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^2.7.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-import-helpers": "^1.2.1",
		"eslint-plugin-prettier": "^4.0.0",
		"git-commit-msg-linter": "^4.1.3",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.4.2",
		"pinst": "^3.0.0",
		"prettier": "^2.6.2",
		"sucrase": "^3.21.0",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.3",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"fast-glob": "^3.2.7",
		"jsonwebtoken": "^8.5.1",
		"mongodb": "^4.6.0",
		"nodemon": "^2.0.16",
		"validator": "^13.7.0"
	},
	"engines": {
		"node": "16.15.x"
	}
}
