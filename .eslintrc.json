{
	"env": {
		"jest": true,
		"es2017": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"prettier",
		"plugin:prettier/recommended",
		"plugin:import/recommended",
		"plugin:import/typescript"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"import"
	],
	"rules": {
		"no-restricted-syntax": "off",
		"no-new": "off",
		"no-underscore-dangle": "off",
		"no-await-in-loop": "off",
		"camelcase": "off",
		"no-unused-vars": "off",
		"@typescript-eslint/ban-types": "warn",
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true
			}
		],
		"no-console": "off",
		"import/no-unresolved": "off",
		"class-methods-use-this": "off",
		"import/prefer-default-export": "off",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": [
					"**/*.test.ts",
					"**/*.spec.ts"
				]
			}
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		],
		"max-classes-per-file": [
			"error",
			4
		],
		"new-cap": "off",
		"no-promise-executor-return": "off"
	},
	"settings": {
		"import/extensions": [
			".ts"
		],
		"import/parsers": {
			"@typescript-eslint/parser": [
				".ts"
			]
		},
		"import/resolver": {
			"typescript": {}
		}
	}
}